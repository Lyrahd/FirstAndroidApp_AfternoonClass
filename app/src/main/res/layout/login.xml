<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/material_grey_50"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/tfEmail"
        android:hint="Email"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tfPassword"
        android:hint="Password"
        android:layout_below="@+id/tfEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_toLeftOf="@+id/btShowpass"
        android:layout_toStartOf="@+id/btShowpass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/btLogIn"
        android:textColor="@color/abc_search_url_text_normal"
        android:textColorHighlight="@color/abc_primary_text_material_dark"
        android:backgroundTint="@android:color/transparent"
        android:textSize="18dp"
        android:layout_below="@+id/btShowpass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/btShowpass"
        android:layout_alignEnd="@+id/btShowpass" />

    <Button
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:id="@+id/btShowpass"
        android:layout_alignRight="@+id/tfEmail"
        android:layout_alignEnd="@+id/tfEmail"
        android:background="@drawable/eyeicon"
        android:layout_alignBottom="@+id/tfPassword" />
</RelativeLayout>