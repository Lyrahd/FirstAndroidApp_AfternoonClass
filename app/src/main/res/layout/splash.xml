<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imgdarkblue"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/darkblue_circle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        android:id="@+id/imgPalette"
        android:src="@drawable/palette"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="COLOUR"
        android:textSize="60dp"
        android:id="@+id/txtColour"
        android:typeface="sans"
        android:textIsSelectable="false"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/txtPalette"
        android:layout_alignLeft="@+id/txtPalette"
        android:layout_alignStart="@+id/txtPalette" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PALETTE"
        android:textSize="55dp"
        android:id="@+id/txtPalette"
        android:typeface="sans"
        android:textIsSelectable="false"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imgdarkblue"
        android:layout_centerHorizontal="true" />


</RelativeLayout>