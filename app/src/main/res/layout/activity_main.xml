<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mlabs.bbm.firstandroidapp.MainActivity"
    android:background="@color/colorAccent">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLog"
        android:onClick="onButtonClick"
        android:layout_marginBottom="81dp"
        style="@style/Animation.AppCompat.Dialog"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:height="65dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/login"
        android:width="330dp"
        android:background="@color/abc_search_url_text_pressed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Animation.AppCompat.Dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:onClick="clickExit"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:height="65dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@android:string/cancel"
        android:width="330dp"
        android:background="@color/abc_search_url_text_pressed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Username"
        android:id="@+id/textView2"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_above="@+id/TFUname" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFUname"
        android:width="300dp"
        android:inputType="text"
        android:layout_above="@+id/btnLog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Password"
        android:id="@+id/textView3"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnLog"
        android:layout_alignStart="@+id/btnLog" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TFPword"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/jeth"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/grabs" />

</RelativeLayout>
