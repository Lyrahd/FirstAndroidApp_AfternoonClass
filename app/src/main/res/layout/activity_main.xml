<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86ccf9"
    android:weightSum="1">




        <ImageView
            android:layout_width="238dp"
            android:layout_height="167dp"
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11"
            android:layout_above="@+id/txtEmail"
            android:layout_alignLeft="@+id/btnLogin"
            android:layout_alignStart="@+id/btnLogin"
            android:layout_marginBottom="24dp" />






        <EditText
            android:layout_width="272dp"
            android:layout_height="37dp"
            android:id="@+id/txtEmail"
            android:hint="Email"
            android:textColorHint="#f3f8f9"
            android:layout_gravity="center_horizontal"
            android:background="#1a404c"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/show"
            android:layout_toStartOf="@+id/show" />


    <EditText
        android:layout_width="274dp"
        android:layout_height="37dp"
        android:id="@+id/txtPword"
        android:hint="Password"
        android:textColorHint="#f3f8f9"
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal"
        android:background="#1a404c"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtEmail"
        android:layout_alignRight="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin"
        android:layout_marginTop="24dp" />


       <Button
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:id="@+id/btnLogin"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13"
            android:background="@color/material_deep_teal_500"
            android:textColor="@color/background_floating_material_light"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="34dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sign up"
            android:textColor="#010b12"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Need help?"
            android:textColor="#010b12"
            android:layout_gravity="center"
            android:id="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/show"
        android:layout_toEndOf="@+id/txtPword"
        android:layout_alignBottom="@+id/txtPword"
        android:layout_alignTop="@+id/txtPword"
        android:layout_toRightOf="@+id/txtPword" />

</RelativeLayout>